<Window x:Class="FastDownloader.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Error" Height="230" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"  AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent" >
    <Border CornerRadius="22" Background="#7A1F1F" Padding="28" Margin="0" BorderBrush="DarkGray" BorderThickness="2" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="210" >
            <TextBlock FontSize="60" Text="❌" Foreground="Red" HorizontalAlignment="Center" Margin="0,4,0,4" />
            <TextBlock x:Name="textMainTitle" Text="Error Occured" 
                       FontWeight="Bold" 
                       FontSize="22" 
                       Foreground="#FFFFFF"
                       Margin="0,8,0,0"
                       TextAlignment="Center"/>
            <TextBlock x:Name="textMessage" Text="{Binding Message}" 
                       FontSize="16" 
                       Foreground="#FFFFFF"
                       Margin="0,8,0,0"
                       TextAlignment="Center"/>
            <Button Content="OK" Width="109" Height="24" Click="OK_Click" Margin="0,14,0,0"/>
        </StackPanel>
    </Border>
 
</Window>