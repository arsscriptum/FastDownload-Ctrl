<Window x:Class="FastDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Files" Height="570" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Summary Info -->
            <RowDefinition Height="Auto"/>
            <!-- Progress Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- Segment Details -->
        </Grid.RowDefinitions>

        <!-- Summary Row -->
        <Grid Margin="5" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="204*" />
                <ColumnDefinition Width="291*" />
                <ColumnDefinition Width="413*" />
            </Grid.ColumnDefinitions>

            <!-- Left: Name & Version -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Height="35">
                <TextBlock Text="Name : BMW Advanced Tools" FontWeight="Bold" Margin="0,0,0,3"/>
                <TextBlock>
            <Run Text="Version : " />
            <Run Text="1.2.0.2" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>

            <!-- Center: Segments, Size, Remaining -->
            <StackPanel VerticalAlignment="Top" Height="48" Margin="31,0,117,0" Grid.Column="1">
                <TextBlock HorizontalAlignment="Right">
            <Run Text="Segments : " />
            <Run Text="20" FontWeight="Bold"/>
            <Run Text=" / 40"/>
                </TextBlock>
                <TextBlock HorizontalAlignment="Right">
            <Run Text="Size : " />
            <Run Text="205 MB" FontWeight="Bold"/>
                </TextBlock>
                <TextBlock HorizontalAlignment="Right">
            <Run Text="Remaining : " />
            <Run Text="34 Mb" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>

            <!-- Right: Transfer Rate & Time Left -->
            <StackPanel Grid.Column="2" VerticalAlignment="Top" Height="32">
                <TextBlock HorizontalAlignment="Left">
            <Run Text="Transfer Rate : " />
            <Run Text="5Mb/sec" FontWeight="Bold"/>
                </TextBlock>
                <TextBlock>
            <Run Text="Time Left : " />
            <Run Text="30 secs" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>
        </Grid>


        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" Height="24" Minimum="0" Maximum="100" 
                     Value="{Binding OverallProgress, Mode=OneWay}" 
                     Margin="0,0,0,8"/>

        <!-- Buttons Row -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnShowDetails" Grid.Column="0" Content="&lt;&lt; Hide Details" Width="120" Height="32" Margin="0,0,8,0" Click="btnShowDetails_Click"/>
            <Button Grid.Column="1" Content="Pause" Width="90" Height="32" Margin="0,0,8,0"/>
            <Button Grid.Column="2" Content="Cancel" Width="90" Height="32" Click="StartDownload_Click"/>
        </Grid>

        <!-- Segment Details DataGrid -->
        <DataGrid Grid.Row="3" 
                  ItemsSource="{Binding Segments, Mode=OneWay}" 
                  AutoGenerateColumns="False" 
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  Margin="0"
                  FontSize="15"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Segment #" Binding="{Binding SegmentNumber}" Width="*"/>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeString}" Width="*"/>
                <DataGridTextColumn Header="Remaining" Binding="{Binding RemainingString}" Width="*"/>
                <DataGridTemplateColumn Header="Progress" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Minimum="0"
                         Maximum="100"
                         Value="{Binding Progress}"
                         Height="16"
                         Margin="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Speed" Binding="{Binding Speed}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
