<Window x:Class="FastDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Manager" Height="350" Width="538"
        FontFamily="MS Sans Serif" FontSize="10"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA" ResizeMode="NoResize">

    <Grid Margin="16,16,0,16" HorizontalAlignment="Left" Width="522">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Summary Info -->
            <RowDefinition Height="Auto"/>
            <!-- Progress Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- Segment Details -->
        </Grid.RowDefinitions>

        <Grid Margin="5" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="193*" />
                <ColumnDefinition Width="166*" />
                <ColumnDefinition Width="153*" />
            </Grid.ColumnDefinitions>

            <!-- Left: Name & Version (not bound, hardcoded for now) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Height="24" Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Name :" Grid.Column="0" FontFamily="MS Sans Serif" FontSize="10"/>
                    <TextBlock Text="BMW Advanced Tools" Grid.Column="1" HorizontalAlignment="Right" FontFamily="MS Sans Serif" FontSize="10" FontWeight="Bold" Margin="0,0,18,0"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Version :" Grid.Column="0" FontFamily="MS Sans Serif" FontSize="10"/>
                    <TextBlock Text="1.2.0.2" Grid.Column="1" HorizontalAlignment="Right" FontFamily="MS Sans Serif" FontSize="10" FontWeight="Bold" Margin="0,0,18,0"/>
                </Grid>
            </StackPanel>

            <!-- Center: Segments, Size, Remaining (all bound) -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" Height="36">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Segments :" Grid.Column="0"/>
                    <TextBlock Text="{Binding SummaryDownloaded, Mode=OneWay}" 
                       Grid.Column="1" 
                       HorizontalAlignment="Right"
                       FontWeight="Bold" FontFamily="MS Sans Serif" FontSize="10"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Size :" Grid.Column="0"/>
                    <TextBlock Text="{Binding PackageSize}" 
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       FontWeight="Bold" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Remaining :" Grid.Column="0"/>
                    <TextBlock Text="{Binding PackageRemaining}" 
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       FontWeight="Bold" FontFamily="MS Sans Serif" FontSize="10"  />
                </Grid>
            </StackPanel>

            <!-- Right: Transfer Rate, Time Left (both bound) -->
            <StackPanel Grid.Column="2" VerticalAlignment="Top" Height="24" Margin="8,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Transfer Rate :" Grid.Column="0"/>
                    <TextBlock Text="{Binding TransferRate, Mode=OneWay}" 
                       Grid.Column="1"
                       FontWeight="Bold" Margin="0,0,18,0" HorizontalAlignment="Right"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="14*" />
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                </Grid>
            </StackPanel>
        </Grid>




        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" Height="24" Minimum="0" Maximum="100" 
                     Value="{Binding OverallProgress, Mode=OneWay}" 
                     Margin="0,0,0,8" HorizontalAlignment="Left" Width="493"/>

        <!-- Buttons Row -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="17*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnShowDetails" Grid.Column="0" Content="&lt;&lt; Hide Details" Margin="0,4,420,0" Click="btnShowDetails_Click" FontFamily="MS Sans Serif" FontSize="9" RenderTransformOrigin="0.809,0.532" Grid.RowSpan="2" HorizontalAlignment="Right" Width="92" Height="28" VerticalAlignment="Top"/>
            <Button x:Name="btnPause" Content="Pause" Height="32" Margin="561,0,146,0" RenderTransformOrigin="0.178,0.567" Click="btnPause_Click"  Visibility="Hidden" FontFamily="MS Sans Serif" FontSize="9" Grid.RowSpan="2"/>
            <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Width="83" Margin="402,4,0,0" Click="btnCancel_Click" FontFamily="MS Sans Serif" FontSize="9" Grid.RowSpan="2"/>
            <Button x:Name="btnTest" Click="StartDownload_Click" Content="START TEST" Height="32" Margin="433,0,274,0" RenderTransformOrigin="0.178,0.567" Background="#FFFF3E2B" FontWeight="Bold" FontFamily="MS Sans Serif" FontSize="9" Visibility="Hidden" Grid.RowSpan="2"/>
        </Grid>

        <!-- Segment Details DataGrid -->
        <DataGrid Name="FilesListDetails" Grid.Row="3" Visibility="Visible" 
                  ItemsSource="{Binding Segments, Mode=OneWay}" 
                  AutoGenerateColumns="False" 
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  FontSize="10" HorizontalAlignment="Left" Width="493"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Segment #" Binding="{Binding SegmentNumber}" Width="*"/>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeString}" Width="*"/>
                <DataGridTextColumn Header="Remaining" Binding="{Binding RemainingString}" Width="*"/>
                <DataGridTemplateColumn Header="Progress" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Minimum="0"
                         Maximum="100"
                         Value="{Binding Progress}"
                         Height="16"
                         Margin="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Speed" Binding="{Binding Speed}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
