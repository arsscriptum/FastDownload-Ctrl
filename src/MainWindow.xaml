<Window x:Class="FastDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Files" Height="570" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Summary Info -->
            <RowDefinition Height="Auto"/>
            <!-- Progress Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- Segment Details -->
        </Grid.RowDefinitions>

        <!-- Summary Row -->
        <Grid Grid.Row="0" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Downloaded" FontWeight="SemiBold" Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="1" Text="{Binding SummaryDownloaded, Mode=OneWay}" FontWeight="Bold" FontSize="15"/>
                </Grid>
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Transfer Rate" FontWeight="SemiBold" Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="1" Text="{Binding TransferRate, Mode=OneWay}" FontWeight="Bold"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Time Left" FontWeight="SemiBold" Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="1" Text="{Binding TimeLeft, Mode=OneWay}" FontWeight="Bold"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" Height="24" Minimum="0" Maximum="100" 
                     Value="{Binding OverallProgress, Mode=OneWay}" 
                     Margin="0,0,0,8"/>

        <!-- Buttons Row -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Show Details" Width="120" Height="32" Margin="0,0,8,0"/>
            <Button Grid.Column="1" Content="Pause" Width="90" Height="32" Margin="0,0,8,0"/>
            <Button Grid.Column="2" Content="Cancel" Width="90" Height="32" Click="StartDownload_Click"/>
        </Grid>

        <!-- Segment Details DataGrid -->
        <DataGrid Grid.Row="3" 
                  ItemsSource="{Binding Segments, Mode=OneWay}" 
                  AutoGenerateColumns="False" 
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  Margin="0"
                  FontSize="15"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Segment #" Binding="{Binding SegmentNumber}" Width="*"/>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeString}" Width="*"/>
                <DataGridTextColumn Header="Remaining" Binding="{Binding RemainingString}" Width="*"/>
                <DataGridTemplateColumn Header="Progress" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Minimum="0"
                         Maximum="100"
                         Value="{Binding Progress}"
                         Height="16"
                         Margin="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Speed" Binding="{Binding Speed}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
