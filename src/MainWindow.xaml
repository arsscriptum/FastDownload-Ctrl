<Window x:Class="FastDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Files" Height="354" Width="849"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA" ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Summary Info -->
            <RowDefinition Height="Auto"/>
            <!-- Progress Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- Segment Details -->
        </Grid.RowDefinitions>

        <Grid Margin="5" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Left: Name & Version (not bound, hardcoded for now) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Name :" Grid.Column="0"/>
                    <TextBlock Text="BMW Advanced Tools" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,0,18,0"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Version :" Grid.Column="0"/>
                    <TextBlock Text="1.2.0.2" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,0,18,0"/>
                </Grid>
            </StackPanel>

            <!-- Center: Segments, Size, Remaining (all bound) -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Segments :" Grid.Column="0"/>
                    <TextBlock Text="{Binding SummaryDownloaded, Mode=OneWay}" 
                       Grid.Column="1" 
                       HorizontalAlignment="Right"
                       FontWeight="Bold" Margin="0,0,18,0"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Size :" Grid.Column="0"/>
                    <TextBlock Text="{Binding PackageSize}" 
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       FontWeight="Bold" Margin="0,0,18,0"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Remaining :" Grid.Column="0"/>
                    <TextBlock Text="{Binding PackageRemaining}" 
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       FontWeight="Bold"/>
                </Grid>
            </StackPanel>

            <!-- Right: Transfer Rate, Time Left (both bound) -->
            <StackPanel Grid.Column="2" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Transfer Rate :" Grid.Column="0"/>
                    <TextBlock Text="{Binding TransferRate, Mode=OneWay}" 
                       Grid.Column="1"
                       FontWeight="Bold" Margin="0,0,18,0" HorizontalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Time Left :" Grid.Column="0"/>
                    <TextBlock Text="{Binding TimeLeft, Mode=OneWay}" 
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       FontWeight="Bold" Margin="0,0,18,0"/>
                </Grid>
            </StackPanel>
        </Grid>




        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" Height="24" Minimum="0" Maximum="100" 
                     Value="{Binding OverallProgress, Mode=OneWay}" 
                     Margin="0,0,0,8"/>

        <!-- Buttons Row -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnShowDetails" Grid.Column="0" Content="&lt;&lt; Hide Details" Height="32" Margin="10,0,687,0" Click="btnShowDetails_Click"/>
            <Button x:Name="btnPause" Content="Pause" Height="32" Margin="561,0,146,0" RenderTransformOrigin="0.178,0.567" Click="btnPause_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Height="32" HorizontalAlignment="Left" Width="97" Margin="690,0,0,0" Click="btnCancel_Click"/>
            <Button x:Name="btnTest" Click="StartDownload_Click" Content="START TEST" Height="32" Margin="433,0,274,0" RenderTransformOrigin="0.178,0.567" Background="#FFFF3E2B" FontWeight="Bold" FontFamily="Segoe Script" Visibility="Hidden"/>
        </Grid>

        <!-- Segment Details DataGrid -->
        <DataGrid Name="FilesListDetails" Grid.Row="3" Visibility="Visible" 
                  ItemsSource="{Binding Segments, Mode=OneWay}" 
                  AutoGenerateColumns="False" 
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  Margin="0"
                  FontSize="10"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Segment #" Binding="{Binding SegmentNumber}" Width="*"/>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeString}" Width="*"/>
                <DataGridTextColumn Header="Remaining" Binding="{Binding RemainingString}" Width="*"/>
                <DataGridTemplateColumn Header="Progress" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Minimum="0"
                         Maximum="100"
                         Value="{Binding Progress}"
                         Height="16"
                         Margin="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Speed" Binding="{Binding Speed}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
