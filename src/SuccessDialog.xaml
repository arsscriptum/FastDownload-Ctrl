<Window x:Class="FastDownloader.SuccessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Complete" Height="230" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"  AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <Border CornerRadius="22" Background="#F4F4F4" Padding="28" Margin="0" BorderBrush="DarkGray" BorderThickness="2">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="210">
            <TextBlock FontSize="60" Text="âœ”" Foreground="LimeGreen" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="Download Completed Successfully!" 
                       FontWeight="Bold" 
                       FontSize="22" 
                       Foreground="#2E7D32"
                       Margin="0,8,0,0"
                       TextAlignment="Center"/>
            <TextBlock Text="{Binding Message}" 
                       FontSize="16" 
                       Foreground="#444"
                       Margin="0,8,0,0"
                       TextAlignment="Center"/>
            <Button Content="OK" Width="109" Height="24" Click="OK_Click" Margin="0,16,0,0"/>
        </StackPanel>
    </Border>
    <Window.Resources>
        <DropShadowEffect x:Key="DialogShadow" BlurRadius="32" Opacity="0.6" ShadowDepth="0" Color="Black"/>
    </Window.Resources>
</Window>